<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.work.wb.activity.SettingsFragment">
    <include layout="@layout/toolbar_center" />
    <RelativeLayout
        android:id="@+id/rl_staff_info"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:minHeight="40dp"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:background="@drawable/list_item"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginTop="25dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:textSize="16dp"
            android:text="原密码"/>

        <EditText
            android:id="@+id/editText_oldPwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/editTextMarinTop"
            android:layout_alignParentRight="true"
            android:ems="10"
            android:hint="@string/tip_input"
            android:inputType="textPassword" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@mipmap/base_horization_line" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:minHeight="40dp"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:background="@drawable/list_item"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginTop="25dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:textSize="16dp"
            android:text="新密码"/>

        <EditText
            android:id="@+id/editText_newPwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/editTextMarinTop"
            android:layout_alignParentRight="true"
            android:ems="10"
            android:hint="@string/tip_input"
            android:inputType="textPassword" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@mipmap/base_horization_line" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@mipmap/base_horization_line" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:minHeight="40dp"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:background="@drawable/list_item"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginTop="25dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:textSize="16dp"
            android:text="确认密码"/>

        <EditText
            android:id="@+id/editText_confPwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/editTextMarinTop"
            android:layout_alignParentRight="true"
            android:ems="10"
            android:hint="@string/tip_input"
            android:inputType="textPassword" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@mipmap/base_horization_line" />

</LinearLayout>
